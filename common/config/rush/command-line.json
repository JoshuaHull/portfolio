{
  "$schema": "https://developer.microsoft.com/json-schemas/rush/v5/command-line.schema.json",
  "commands": [
    {
      "commandKind": "bulk",
      "name": "dev",
      "summary": "serve all apps via Vite",
      "enableParallelism": true,
      "ignoreMissingScript": true
    },
    {
      "commandKind": "bulk",
      "name": "test:nowatch",
      "summary": "run all tests",
      "enableParallelism": true,
      "ignoreMissingScript": true
    },
    {
      "commandKind": "bulk",
      "name": "build:next",
      "summary": "NextJS is not playing well with incremental builds. So Next apps are excluded from the build command.",
      "enableParallelism": true,
      "ignoreMissingScript": true,
      "incremental": true
    }
  ]
}
